{
	"name": "solidity",
	"description": "A language client for Solidity using compiler's builtin language server.",
	"author": "Solidity Compiler Developers",
	"license": "MIT",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/ethereum/solidity-lsp-vscode"
	},
	"publisher": "ethereum",
	"categories": [],
	"keywords": [
		"solidity"
	],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:solidity"
	],
	"main": "./client/out/extension",
	"contributes": {
		"grammars": [
			{
				"language": "solidity",
				"scopeName": "source.solidity",
				"path": "./solidity-syntax.json"
			}
		],
		"languages": [
			{
				"id": "solidity",
				"extensions": [
					".sol"
				],
				"aliases": [
					"Solidity",
					"solidity"
				],
				"configuration": "./solidity-configuration.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Solidity Language Server Configuration",
			"properties": {
				"Solidity.solc.path": {
					"scope": "resource",
					"type": ["string", "null"],
					"default": "solc",
					"description": "Path to native solc executable."
				},
				"Solidity.solc.logpath": {
					"scope": "resource",
					"type": ["string", "null"],
					"default": null,
					"description": "Path to log file that solc's language server mode should write to."
				},
				"Solidity.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ..",
		"test": "sh ./scripts/endToEndTest.sh"
	},
	"devDependencies": {
		"@types/mocha": "^8.0.3",
		"mocha": "^8.1.1",
		"@types/node": "^12.12.0",
		"eslint": "^6.4.0",
		"@typescript-eslint/parser": "^2.3.0",
		"typescript": "^4.0.2"
	}
}
